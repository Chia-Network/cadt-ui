{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@/*": ["./renderer/*"]
    },
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable",
      "dom",
      "es6",
      "dom.iterable",
      "scripthost"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "outDir": "build",
    "strict": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/**/*",
    "src/**/*.json",
    "src/preload.js"
  ],
  "types": ["src/**/*.d.ts"]
}